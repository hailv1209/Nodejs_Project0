        <!-- for each loop -->
        <% listUsers.forEach(function(User) { %>
          <tr>
          <td><%= User.id %></td>
          <td><%= User.email %></td>
          <td><%= User.name %></td>
          <td><%= User.city %></td>
          <td>
            <a href="/update/<%= User.id %>">Edit</a>
            <form action="/delete/<%= User.id %>" method="GET">
              <button>Delete</button>
            </form>
            
          </td>
        </tr>
        <% }); %>


      </table>
    </div>
