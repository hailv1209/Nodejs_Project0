<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update a Users</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/create">Create Users</a>

    </div>
    <div class="form-add-new">
        <form action="/update-user/<%=User.id%>" method="post">
      <fieldset>
        <legend>Update a user</legend>
        <div class="imput-group">
          <label>Email: </label>
          <input name="email" type="text" value="<%= User.email %>" />
        </div>
        <div class="imput-group">
          <label>Name: </label>
          <input name="name" type="text" value="<%= User.name %>"  />
        </div>
        <div class="imput-group">
          <label>City: </label>
          <input name="city" type="text" value="<%= User.city %>" />
        </div>
        <div>
          <button>Save</button>
        </div>
      </fieldset>
    </form>
    </div>
  </body>
</html>
